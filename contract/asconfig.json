{
  "extends": "near-sdk-as/asconfig.json",
  "workspaces": [
    "assembly"
  ],
  "entries": ["assembly/index.ts"],
  "targets": {
    "debug": {
      "outFile": "build/debug/synphonic-nft-contract.wasm",
      "textFile": "build/debug/synphonic-nft-contract.wat",
      "sourceMap": true,
      "debug": true
    },
    "release": {
      "outFile": "build/release/synphonic-nft-contract.wasm",
      "textFile": "build/release/synphonic-nft-contract.wat",
      "sourceMap": true,
      "optimizeLevel": 3,
      "shrinkLevel": 0,
      "converge": false,
      "noAssert": false
    }
  },
  "options": {
    "bindings": "esm"
  }
} 